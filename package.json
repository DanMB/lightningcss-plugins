{
	"name": "lightningcss-plugins-monorepo",
	"version": "0.0.1",
	"description": "monorepo for custom lightningcss plugins",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.6.4",
	"engines": {
		"pnpm": "^10",
		"node": "^22"
	},
	"scripts": {
		"lint": "pnpm -r lint && eslint --cache --cache-location node_modules/.eslintcache 'packages/**/*.js'",
		"format": "pnpm -r format",
		"precommit": "pnpm format && pnpm lint",
		"pub": "pnpm format && pnpm lint && pnpm -r publish"
	},
	"devDependencies": {
		"@eslint/js": "^9.23.0",
		"eslint": "^9.23.0",
		"prettier": "^3.1.1"
	}
}